<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="3dp"
    android:padding="2dp"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_weight="2"
        android:paddingStart="5dp"
        >
        <TextView
            android:id="@+id/tv_mission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mission_name"
            />
        <TextView
            android:id="@+id/tv_rocket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rocket_name"
            />
        <TextView
            android:id="@+id/tv_launch_site_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launch_site_name"
            />
        <TextView
            android:id="@+id/tv_date_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_launch"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/iv_spacex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="bottom|end"
            android:src="@drawable/ic_baseline_bedroom_baby_24"
            android:contentDescription="@string/todo" />
    </LinearLayout>


</LinearLayout>